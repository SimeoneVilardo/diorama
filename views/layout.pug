nav#mainNav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Diorama
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if !user
          li
            a(href='/login') Login
          li
            a(href='/signup') Registrati
        if (user && (user.comunication == 'phone' && user.validated == false))
          li
            a(href='validate-phone') Convalida Cellulare
        if user    
          li
            a(href='/chat') Chat
        li
          a(href='/about') Informazioni
        li
          a(href='/documentation') Documentazione API
        if user
          li
            a(href='/management') Ciao #{user.username}
          li
            a#btnLogout Disconnetti
block content
script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/js/bootstrap-dialog.min.js')
